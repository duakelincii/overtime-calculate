{
    "openapi": "3.0.0",
    "info": {
        "title": "Dokumentasi API Sistem Perhitungan Lembur",
        "description": "Dokumentasi API dari project Sistem Perhitungan Lembur (overtime)",
        "termsOfService": "http://swagger.io/terms/",
